---
import Layout from '../../layouts/Layout.astro'
import Navigation from '../../components/Navigation.astro'

export const prerender = false

const response = await fetch('https://astro-api-test-df45hr.vercel.app/api/items')
const items: {
  id: number
  title: string
}[] = await response.json()
---

<Layout title="Items">
  <Navigation />

  <main>
    <h1>Items</h1>
    <lu>
      {items.map(item => <li><a href={`/items/${item.id}`}>{item.title}</a></li>)}
    </lu>
  </main>
</Layout>

<style>
main {
  color: white;
}
a {
  color: white;
}
</style>
